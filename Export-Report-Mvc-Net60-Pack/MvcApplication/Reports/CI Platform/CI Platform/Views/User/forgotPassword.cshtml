            <div class="col-lg-4 col-md-8 forgotForm col-sm-8 col-xs-12 d-flex flex-column justify-content-center">
                <form style="margin-top: auto;margin-bottom: auto;" asp-action="forgotPassword">
                    <div class="form-group text-center">
                        <h5>Forgot Password</h5>
                        <p class=" text-secondary small">Enter your email address you've using for your account
                            below
                            and we will send you a password reset link</p>
                    </div>
                    <div class="text-danger text-center">@TempData["Message"]</div> 
                    <div class="form-group pt-2">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" type="email" class="form-control rounded-1 mt-2" id="exampleInputEmail1"
                            placeholder="Enter your email address...">
                    </div>
                    <div class="d-grid gap-2 pt-4">
                        <button class="btn btn-outline-danger rounded-5" type="submit">Reset my Password</button>
                    </div>
                    <div class="form-group text-center pt-3">
                        <a asp-action="Index"
                            style="--bs-link-opacity: .5;text-decoration: none;color: #414141;">Login</a>

                    </div>
                </form>
                @section Scipts{
                    @{
                        <partial name="_ValidationScriptsPartial" />
                    }
                }
                <div class="text-center">
