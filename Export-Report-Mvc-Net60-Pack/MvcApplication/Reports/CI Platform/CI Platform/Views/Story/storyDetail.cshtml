                width: 25%;
                height: 100%;
                opacity: 0.4;
            }

            .mySwiper .swiper-slide-thumb-active {
                opacity: 1;
            }

        .swiper-slide img {
            display: block;
            width: 75%;
            height: 100%;
            object-fit: cover;
        }

        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: lightgray;
            color: white;
        }
    </style>
    @*<link rel="stylesheet" href="~/css/StoryListing.css">*@
</head>

<body>
    <partial name="_Notification" />

    <partial name="_firstHeaderPartial" />

    <div class="container pt-3">
        <div class="row">
            @* <div class="col-lg-6">
                <div class="mb-2 h-75 main-img">

