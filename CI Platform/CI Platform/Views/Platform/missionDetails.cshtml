                                {
                                    <button type="submit" class="btn btn-outline-warning applyButton" id="applyMission" asp-controller="Platform" asp-action="missionDetails" asp-route-id="@ViewBag.relatedMissions[i].MissionId">
                                        View Details<i class="bi bi-arrow-right"></i>
                                    </button>

                                }
                                else
                                {
                                    <button type="submit" class="btn btn-outline-warning applyButton" id="applyMission" asp-controller="Platform" asp-action="missionDetails" asp-route-id="@ViewBag.relatedMissions[i].MissionId">
                                        Apply Now<i class="bi bi-arrow-right"></i>
                                    </button>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            }


        </div>
