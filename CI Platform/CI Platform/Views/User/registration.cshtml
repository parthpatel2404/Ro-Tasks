            <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        @{
                            for (var i = 0; i < @ViewBag.Banner.Count; i++)
                            {
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i"
                                    class="@((i == 0) ? "active" : "")" aria-current="@((i == 0) ? "true" : "false")" aria-label="Slide @(i+1)">
                                </button>
                            }
                        }
                    </div>
                    <div class="carousel-inner">
                        @{
                            for (var i = 0; i < @ViewBag.Banner.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")" style="height:98vh" >
                                    <img src="/Assets/@ViewBag.Banner[i].Image"
                                     class="img-responsive img-fluid d-block w-100" style="height:100%;object-fit:cover"  alt="...">
                                    <div class="carousel-caption d-none d-md-block text-start">
                                        <h5>
                                            @ViewBag.Banner[i].Text
                                        </h5>
                                        <p class="text-white-50 small">
                                            @ViewBag.Banner[i].Text
                                        </p>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
