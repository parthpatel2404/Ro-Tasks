            <div class="col-xl-4 col-lg-4 col-md-8 regForm col-sm-12 d-flex flex-column justify-content-center">
                <form style="margin-top: auto;margin-bottom: auto;" method="post">
                    <div class="form-group pt-2">

                                <label asp-for="FirstName">First Name</label>
                                <input asp-for="FirstName" type="text" class="form-control rounded-1 mt-2" id="exampleInputName1"
                                    placeholder="evan">
                                    <span asp-validation-for=FirstName class=text-danger></span><br />

                                <label asp-for="LastName">Last Name</label>
                                <input asp-for="LastName" type="text" class="form-control rounded-1 mt-2" id="exampleInputLastName1"
                                    placeholder="donohue">
                                    <span asp-validation-for=LastName class=text-danger></span><br />

                                <label asp-for="PhoneNumber">Phone Number</label>
                                <input asp-for="PhoneNumber" type="number" class="form-control rounded-1 mt-2" id="exampleInputNumber1"
                                    placeholder="8923454615">
                                    <span asp-validation-for=PhoneNumber class=text-danger></span><br />

                                <label asp-for="Email"></label>
                                <input asp-for="Email" type="email" class="form-control rounded-1 mt-2" id="exampleInputEmail1"
                                    placeholder="evan.donohue@gmail.com">
                                    <span asp-validation-for=Email class=text-danger></span><br /> 

                                <label asp-for="Password"></label>
                                <input asp-for="Password" type="password" class="form-control rounded-1 mt-2" id="exampleInputPassword1"
                                    placeholder="**********">
                                    <span asp-validation-for=Password class=text-danger></span><br />

                                <label asp-for="CnfPassword" for="exampleInputConfirmPassword1">Confirm Password</label>
                                <input asp-for="CnfPassword" type="password" class="form-control rounded-1 mt-2"
                                    id="exampleInputConfirmPassword1" placeholder="**********">
                                    <span asp-validation-for=CnfPassword class=text-danger></span>
                    <div class="d-grid gap-2 pt-4">
                        <button class="btn btn-outline-danger rounded-5" type="submit">Register</button>
                    </div>
                    <div class="form-group text-center">
                        <a asp-controller="User" asp-action="forgotPassword"
                            style="--bs-link-opacity: .5 ;color: #414141;text-decoration: none;">Lost your
                            password?</a>
                        <p style="color: #414141;">Already registered? <a asp-controller="User" asp-action="Index"
                                style="--bs-link-opacity: .5;text-decoration: none">Login now</a></p>

                    </div>
                    </div>
                </form>
