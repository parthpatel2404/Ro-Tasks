@model CIPlatform.Entities.ViewModel.MissionViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Privacy Policy</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <style>
        .pp {
            text-decoration: none;
            color: black;
        }

        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: lightgray;
            color: white;
        }
    </style>

</head>

<body>
    <partial name="_Notification" />

    <partial name="_firstHeaderPartial" />

    <div class="container">
        <h2 class="mb-5 mt-5">Privacy and Cookies Policy</h2>

        <div class="row nav">

            <div class="col-lg-3 col-md-4 col-sm-5 col-12">
                @foreach (var i in @Model.cmsPages)
                {
                    <div class="row">

                        <div class="col-9 " id="wrapper"> <a href="#@i.Slug" class="pp "> @i.Title</a></div>

                        <div class="col-3"><i class="bi bi-chevron-right"></i></div>

                    </div>
                    <hr class="me-5">
                }
            </div>

            <div class="col-lg-9 col-md-8 col-sm-7">
                @foreach (var i in @Model.cmsPages)
                {
                    <h3 class="mb-4" id="@i.Slug">@i.Title</h3>
                    <p>
                        @i.Description
                    </p>

                    <hr class="mt-5">

                }
            </div>


        </div>
    </div>

    <footer class="footer">
        <a asp-controller="User" asp-action="privacyPolicy" style="color: #333333;text-decoration:none;margin-left:16%">Privacy Policy</a>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
